<%- include('partials/header.ejs', { title: 'Liste des Articles' }) %>
<h1>Liste des Articles</h1>
<a href="/items/add" class="btn btn-primary mb-3">Ajouter un article</a>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Num√©ro</th>
      <th>Label</th>
      <th>Prix</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% items.forEach(item => { %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.item_number %></td>
        <td><%= item.item_label %></td>
        <td><%= item.item_retail_price %></td>
        <td>
          <a href="/items/edit/<%= item.id %>" class="btn btn-secondary">Modifier</a>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>
