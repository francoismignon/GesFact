<%- include('partials/header', { title: mode === 'add' ? 'Ajouter un client' : 'Modifier un client' }) %>
<h1><%= mode === 'add' ? 'Ajouter un client' : 'Modifier un client' %></h1>
<form method="POST" action="<%= mode === 'add' ? '/customers/add' : '/customers/edit/' + (customer ? customer.id : '') %>">
  <div class="form-group">
    <label>Numéro du client :</label>
    <input type="number" name="cust_number" value="<%= customer ? customer.cust_number : '' %>" required>
  </div>
  <div class="form-group">
    <label>Compagnie :</label>
    <input type="text" name="cust_compagny" value="<%= customer ? customer.cust_compagny : '' %>" required>
  </div>
  <div class="row">
    <div class="col">
      <label>Prénom :</label>
      <input type="text" name="cust_firstname" value="<%= customer ? customer.cust_firstname : '' %>">
    </div>
    <div class="col">
      <label>Nom :</label>
      <input type="text" name="cust_lastname" value="<%= customer ? customer.cust_lastname : '' %>">
    </div>
  </div>
  <div class="form-group">
    <label>TVA :</label>
    <input type="text" name="cust_vat_number" value="<%= customer ? customer.cust_vat_number : '' %>">
  </div>
  <div class="form-group">
    <label>Email :</label>
    <input type="email" name="cust_mail" value="<%= customer ? customer.cust_mail : '' %>">
  </div>
  <div class="form-group">
    <label>Téléphone :</label>
    <input type="text" name="cust_phone" value="<%= customer ? customer.cust_phone : '' %>">
  </div>
  <div class="form-group">
    <label>Infos complémentaires :</label>
    <textarea name="cust_info"><%= customer ? customer.cust_info : '' %></textarea>
  </div>
  <button type="submit" class="btn">Sauvegarder</button>
</form>
<%- include('partials/footer') %>
